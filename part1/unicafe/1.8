import { useState } from 'react'

const Button = (props) => (
  <button onClick={props.handleClick}>{props.name}</button>
)

const Statistics = (props) => {
  return (
    <div>
      <p>
        good {props.good} <br />
        neutral {props.neutral} <br />
        bad {props.bad} <br />
        all {props.good + props.neutral + props.bad} <br />
        average { (props.good + props.neutral + props.bad) === 0 ? "-" : ((props.good - props.bad) / (props.good + props.neutral + props.bad)) }<br />
        positive { (props.good + props.neutral + props.bad) === 0 ? "-" : ((props.good) / (props.good + props.neutral + props.bad) * 100) } % <br />
      </p>
    </div>
  )
}


const App = () => {
  // save clicks of each button to its own state
  const [good, setGood] = useState(0)
  const [neutral, setNeutral] = useState(0)
  const [bad, setBad] = useState(0)

  const increaseToValue = (props, name) => {
    if (name === 'good') {
      setGood(props + 1)
      console.log('good:', good, 'neutral:', neutral, 'bad:', bad)
    } else if (name === 'neutral') {
        setNeutral(props + 1)
        console.log('good:', good, 'neutral:', neutral, 'bad:', bad)
    } else {
        setBad(props + 1)
        console.log('good:', good, 'neutral:', neutral, 'bad:', bad)
      }
    }

  return (
    <div>
      <h1>give feedback</h1>
      <Button handleClick={() => increaseToValue(good, 'good')} name="good" />
      <Button handleClick={() => increaseToValue(neutral, 'neutral')} name="neutral" />
      <Button handleClick={() => increaseToValue(bad, 'bad')} name="bad" />
      <h1>statistics</h1>
      <Statistics good={good} neutral={neutral} bad={bad}/>
    </div>
  )
}

export default App
