import { useState } from 'react'
import { Fragment } from 'react'

const App = () => {
  const [persons, setPersons] = useState([
    { name: 'Arto Hellas',
      number: "040-123-4567" }
  ]) 
  const [newName, setNewName] = useState('')
  const [newNumber, setNewNumber] = useState('')
  const [search, setSearch] = useState('')

  const addName = (event) => {
    event.preventDefault()
    console.log('button clicked', event.target)
    const nameObject = {
      name: newName,
      number: newNumber
    }
    if (persons.some(person => person.name === nameObject.name) === false) {
      setPersons(persons.concat(nameObject))   
      console.log("NAME NOT IN DATABASE")
    } else {
      window.alert(`${newName} is already in the phonebook`)
      console.log("NAME ALREADY IN DATABASE")
    }
    setNewName('')
    setNewNumber('')
    console.log(persons, newName)
  }

  const searchNames = (event) => {
    event.preventDefault()
    console.log(persons)
    const searchObject = search
    if (persons.some(person => person.name.toLowerCase() === searchObject.toLowerCase()) === true) {
      console.log("HIS NAME EXISTS")
      console.log(persons.find((person) => person.name.toLowerCase() === searchObject.toLowerCase()))
      setPersons([persons.find((person) => person.name.toLowerCase() === searchObject.toLowerCase())])
    } else {
      console.log("HE DOESNT EXIST")
    }
  }

  const handleNameChange = (event) => {
    console.log(event.target.value)
    setNewName(event.target.value)
  }

  const handleNumberChange = (event) => {
    console.log(event.target.value)
    setNewNumber(event.target.value)
  }

  const handleSearch = (event) => {
    console.log(event.target.value)
    setSearch(event.target.value)
  }

  const Entries = (props) => {
    return (
      <div>
        {props.entries.map((entry) =>
        <div key={entry.name}>{entry.name} {entry.number}</div>
        )}
      </div>
    )
  }

  return (
    <div>
      <div>debug: {newName}</div>
      <h2>Phonebook</h2>
      <form onSubmit={searchNames}>
        <div>
          filter shown with <input value={search} onChange={handleSearch}/>
        </div>
      </form>
      <h2>add a new</h2>
      <form onSubmit={addName}>
        <div>
          name: <input value={newName} onChange={handleNameChange}/>
        </div>
        <div>
          number: <input value={newNumber} onChange={handleNumberChange}/>
        </div>
        <div>
          <button type="submit">add</button>
        </div>
      </form>
      <h2>Numbers</h2>
      <Entries entries={persons}/>
    </div>
  )
}

export default App
